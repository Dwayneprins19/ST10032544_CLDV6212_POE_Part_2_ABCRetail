@{
	ViewData["Title"] = "Peek Message";
}

<h2 class="mb-3">Peek Next Message</h2>

@if (ViewBag.Message != null)
{
	<div class="alert alert-info">@ViewBag.Message</div>
}
else
{
	<div class="alert alert-warning">No messages available to peek.</div>
}

<div class="mt-3">
	<a asp-action="Enqueue" class="btn btn-primary">Send New Message</a>
	<a asp-action="Dequeue" class="btn btn-success">Dequeue Message</a>
	<a asp-action="All" class="btn btn-outline-dark">View All Message</a>
</div>