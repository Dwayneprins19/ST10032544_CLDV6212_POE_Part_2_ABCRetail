@model List<ABCRetail.Models.ProductEntity>

@{
	ViewData["Title"] = "Products";
}

	<h2>Products</h2>
	<p>
		<a class="btn btn-primary" asp-action="Create" asp-controller="Product">Add Product</a>
	</p>
	
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Price</th>
				<th>Image</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
		@foreach (var p in Model)
		{
			<tr>
				<td>@p.Name</td>
				<td>@p.Price</td>
				<td>
					@if (!string.IsNullOrEmpty(p.ImageUrl))
					{
						<img src="@p.ImageUrl" width="50"/>
					}
				</td>
				<td>
					<a class="btn btn-sm btn-danger"
					   asp-action="Delete"
					   asp-controller="Product"
					   asp-route-partitionKey="@p.PartitionKey"
					   asp-route-rowKey="@p.RowKey">
						Delete
					</a>
				</td>
			</tr>
		}
		</tbody>
	</table>