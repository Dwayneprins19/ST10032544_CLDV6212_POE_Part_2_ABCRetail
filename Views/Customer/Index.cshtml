@model List<ABCRetail.Models.CustomerEntity>

	@{
		ViewData["Title"] = "Customers";
	}

	<h2>Customers</h2>

	<p>
		<a class="btn btn-primary" asp-action="Create">Add New Customer</a>
	</p>
	
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model ?? Enumerable.Empty<ABCRetail.Models.CustomerEntity>())
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Email</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.RowKey" class="btn btn-sm btn-warning">Edit</a>
						<a asp-action="Delete" asp-route-partitionKey="@item.PartitionKey" asp-route-rowkey="@item.RowKey" class="btn btn-sm btn-danger">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>